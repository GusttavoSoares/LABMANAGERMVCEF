@model IEnumerable<LabManager_MVC_EF.Models.Lab>

@{
    ViewData["Title"] = "Labs";
}

<h1>@ViewData["Title"]</h1>

<!-- Lógica de View -->
@if (Model.Count() == 0)
{
    <p> Não há laboratorios cadastrados </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Name</th>
                <th>Block</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Number</td>
                    <td>@lab.Name</td>
                    <td>@lab.Block</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Lab" asp-action="Show" asp-route-id="@lab.Id">Ver</a>
                        <a class="btn btn-warning btn-sm" asp-controller="Lab" asp-action="UpdateForm" asp-route-id="@lab.Id">Atualizar</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Lab" asp-action="Delete" asp-route-id="@lab.Id">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary btn-sm" asp-controller="Lab" asp-action="CreateForm">Criar lab</a>