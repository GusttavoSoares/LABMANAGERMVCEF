@model LabManager_MVC_EF.Models.Lab

@{
    ViewData["Title"] = $"Lab { Model.Id }";
}

<h1>@ViewData["Title"]</h1>

<p>
    <b>Id: </b> @Model.Id
</p>

<p>
    <b>Number: </b> @Model.Number
</p>

<p>
    <b>Name: </b> @Model.Name
</p>

<p>
    <b>Name: </b> @Model.Block
</p>

<a class="btn btn-danger btn-sm" asp-controller="Lab" asp-action="Delete" asp-route-id="@Model.Id">Apagar</a>
<a class="btn btn-primary btn-sm" asp-controller="Lab" asp-action="UpdateForm" asp-route-id="@Model.Id">Atualizar
    lab</a>